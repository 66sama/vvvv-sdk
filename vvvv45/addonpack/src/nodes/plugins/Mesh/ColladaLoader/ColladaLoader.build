<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="VVVV.Plugin"
	default="build"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

  <include buildfile="${root.dir}/nant-plugins.xml" />
  <property name="lib.name" value="ColladaLoader.dll" />

  <assemblyfileset id="project.references">
		<include name="${lib.dir}/**/*.dll" />
    <include name="dependencies/*.dll" />
  </assemblyfileset>

  <fileset id="project.sources" failonempty="true">
    <include name="**/*.cs" />
    <include name="${shared.src}/SlimDX/SlimDXUtils.cs" />
  </fileset>
  
  <target name="post-build">
    <copy todir="${plugin.path}">
      <fileset basedir="dependencies">
        <include name="**/*" />
      </fileset>
    </copy>
    <copy todir="${plugin.path}">
      <fileset basedir=".">
        <include name="*.tga" />
	      <include name="*.dae" />
      </fileset>
    </copy>
  </target>

</project>